<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    <!-- 引入样式 -->
    <link rel="stylesheet" href="~/Content/iview.css">
    <style>
        body, html, #app {
            height: 100%;
            overflow-y: auto;
        }

        .layout {
            border: 1px solid #d7dde4;
            height:100%;
            background: #fff;
            position: relative;
            border-radius: 4px;
            overflow: auto;
        }

        .layout-header {
            background: #fff;
            box-shadow: 0 1px 1px rgba(0,0,0,.1);
        }

        .layout-copy {
            display:block;
            text-align: center;
            padding: 10px 0 20px;
            color: #9ea7b4;
            position: relative;
            bottom: 0px;
            width: 100%;
        }

        .layout-ceiling {
            background: #f14d49;
            padding: 10px 0;
            overflow: hidden;
        }

        .layout-ceiling-main {
            float: right;
            margin-right: 15px;
            color: #FFF;
        }

            .layout-ceiling-main a {
                color: #fff;
            }

        .demo-carousel {
            height: 100%;
            background: #fff;
        }

            .demo-carousel img {
                width: 100%;
                height: 100%;
            }

        .layout-title {
            height: 60px;
        }

            .layout-title img {
                height: 60px;
                width: 100px;
                display: block;
            }

        .layout-body {
            width:100%;
            min-height:100%;
            height:auto;
            display:inline-block;
            background-image: url('../../Content/images/bg2.jpg');
            background-size:100%;
            background-repeat:repeat-x;
            background-repeat:repeat-y;
        }
    </style>
    @RenderSection("styles", required: false)
</head>
<body>

    <div id="app">
        <div class="layout">
            <div class="layout-header">
                <div class="layout-title">
                    <Row>
                        <i-col span="6">
                            <img />
                        </i-col>
                        <i-col span="18">
                            <i-menu mode="horizontal" theme="light" active-name="1">
                                <Menu-item name="1">
                                    <a href="~/Home/Index">首页</a>
                                </Menu-item>
                                <Menu-item name="2">
                                    <Icon type="ios-people"></Icon>
                                    <a href="~/Home/Product">产品中心</a>
                                </Menu-item>
                                <Menu-item name="3">
                                    <Icon type="settings"></Icon>
                                    我的订单
                                </Menu-item>
                              
                                <Menu-item name="4">

                                    <Icon type="settings"></Icon>
                                    <Badge count="3">
                                        <a href="~/Home/Cart" style="height:40px">我的购物车&nbsp;&nbsp;</a>
                                    </Badge>
                                </Menu-item>

                            </i-menu>
                        </i-col>
                    </Row>
                </div>
            </div>
            <div class="layout-body">
                @RenderBody()
            </div>
            <div class="layout-copy">
                2011-2016 &copy; TalkingData
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <!-- 引入Vue -->
    <script src="~/Scripts/vue.min.js"></script>
    <!-- 引入组件库 -->
    <script src="~/Scripts/iview.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
